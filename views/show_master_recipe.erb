<div class="title">
  <div class="name">
    <p><%= @recipe.name %></p>
    <p><%= @recipe.style.name %></p>
  </div>
  <div class="srm" style="background:<%= get_srm_color(@recipe.srm) %>"><img src="http://i.imgur.com/I6GR4sm.png" alt="beer"></div>
</div>

<h3>Stats</h3>
<div class="stats">
  <div class="top-row">
    <p><%= @stats['abv'].round(1) %>%</p>
    <p><%= @stats['ibu'] %></p>
    <p><%= @stats['og'].round(3) %></p>
    <p><%= @stats['fg'].round(3) %></p>
  </div>
  <p>ABV</p>
  <p>IBU</p>
  <p>OG</p>
  <p>FG</p>
</div>

<h3>Fermentables</h3>
<div class="fermentables">
  <% @fermentables.each do |fermentable| %>
    <h4><%= fermentable.fermentable.name %></h4>
  <% end %>
</div>

<h3>Hops</h3>
<div class="hops">
  <% @hops.each do |hop| %>
    <h4><%= hop.hop.name %></h4>
  <% end %>
</div>

<h3>Other Info</h3>
<div class="yeast-mash-info">
  <p>Mash Temp: <%= @recipe.mash_temp %>deg</p>
  <p>Mash Time: <%= @recipe.mash_time %>mins</p>
  <p>Yeast: <%= @recipe.yeast.name %></p>
  <p>Ferment Temp: <%= @recipe.ferment_temp %>deg</p>
</div>

<form action="/add/<%= @recipe.id %>" method="post">
  <button class="add-button">Add to my recipes</button>
</form>
