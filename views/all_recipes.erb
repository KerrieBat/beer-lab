<h2>Browse All Recipes</h2>

<% @recipes.each do |recipe| %>
  <% stats = get_stats recipe %>
  <div class="recipe-card">
    <div class="name">
      <p><%= recipe.name %></p>
      <p><%= recipe.style.name %></p>
    </div>
    <div class="srm" style="background:<%= get_srm_color(recipe.srm) %>"><img src="http://i.imgur.com/I6GR4sm.png" alt="beer"></div>
    <p>ABV: <%= stats['abv'].round(1) %>%</p>
    <p>IBU <%= stats['ibu'] %></p>
    <a href="/recipes/<%= recipe.id %>">More...</a>
  </div>
<% end %>
